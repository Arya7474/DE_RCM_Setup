{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "MyTest15ADF"
		},
		"hosRCMsQL_ls_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'hosRCMsQL_ls'"
		},
		"hosRCMGit_ls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://raw.githubusercontent.com/"
		},
		"hosRCMsQL_ls_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "hosa-sql-server.database.windows.net"
		},
		"hosRCMsQL_ls_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "@{linkedService().database}"
		},
		"hosRCMsQL_ls_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "myadmin"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/hosRCMGit_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "HttpServer",
				"typeProperties": {
					"url": "[parameters('hosRCMGit_ls_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/hosRCMsQL_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"database": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('hosRCMsQL_ls_properties_typeProperties_server')]",
					"database": "[parameters('hosRCMsQL_ls_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('hosRCMsQL_ls_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('hosRCMsQL_ls_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/HosGitRcm_ds')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "hosRCMGit_ls",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"filename": {
						"type": "String"
					},
					"foldername": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "HttpServerLocation",
						"relativeUrl": {
							"value": "bigdatabysumitm/Trendytech-Azure-Project/refs/heads/main/datasets/EMR/@{dataset().foldername}/@{dataset().filename}",
							"type": "Expression"
						}
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/hosRCMGit_ls')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/hosSQLRcm_ds')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "hosRCMsQL_ls",
					"type": "LinkedServiceReference",
					"parameters": {
						"database": {
							"value": "@dataset().databasename",
							"type": "Expression"
						}
					}
				},
				"parameters": {
					"databasename": {
						"type": "String"
					},
					"tablename": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [],
				"typeProperties": {
					"schema": "dbo",
					"table": {
						"value": "@dataset().tablename",
						"type": "Expression"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/hosRCMsQL_ls')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/hosGitTohosSQL')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "foreachHosGitFolder_File",
						"type": "ForEach",
						"dependsOn": [],
						"userProperties": [],
						"typeProperties": {
							"items": {
								"value": "@pipeline().parameters.p_array",
								"type": "Expression"
							},
							"activities": [
								{
									"name": "copy_from_git_to_sql_hosRCM",
									"type": "Copy",
									"dependsOn": [],
									"policy": {
										"timeout": "0.12:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"userProperties": [],
									"typeProperties": {
										"source": {
											"type": "DelimitedTextSource",
											"storeSettings": {
												"type": "HttpReadSettings",
												"requestMethod": "GET"
											},
											"formatSettings": {
												"type": "DelimitedTextReadSettings"
											}
										},
										"sink": {
											"type": "AzureSqlSink",
											"writeBehavior": "insert",
											"sqlWriterUseTableLock": false,
											"disableMetricsCollection": false
										},
										"enableStaging": false,
										"translator": {
											"type": "TabularTranslator",
											"typeConversion": true,
											"typeConversionSettings": {
												"allowDataTruncation": true,
												"treatBooleanAsNumber": false
											}
										}
									},
									"inputs": [
										{
											"referenceName": "HosGitRcm_ds",
											"type": "DatasetReference",
											"parameters": {
												"filename": {
													"value": "@item().filename",
													"type": "Expression"
												},
												"foldername": {
													"value": "@item().foldername",
													"type": "Expression"
												}
											}
										}
									],
									"outputs": [
										{
											"referenceName": "hosSQLRcm_ds",
											"type": "DatasetReference",
											"parameters": {
												"databasename": {
													"value": "@item().foldername",
													"type": "Expression"
												},
												"tablename": {
													"value": "@split(item().filename,'.')[0]",
													"type": "Expression"
												}
											}
										}
									]
								}
							]
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"parameters": {
					"p_array": {
						"type": "array",
						"defaultValue": [
							{
								"foldername": "trendytech-hospital-a",
								"filename": "departments.csv"
							},
							{
								"foldername": "trendytech-hospital-a",
								"filename": "encounters.csv"
							},
							{
								"foldername": "trendytech-hospital-a",
								"filename": "patients.csv"
							},
							{
								"foldername": "trendytech-hospital-a",
								"filename": "providers.csv"
							},
							{
								"foldername": "trendytech-hospital-a",
								"filename": "transactions.csv"
							},
							{
								"foldername": "trendytech-hospital-b",
								"filename": "departments.csv"
							},
							{
								"foldername": "trendytech-hospital-b",
								"filename": "encounters.csv"
							},
							{
								"foldername": "trendytech-hospital-b",
								"filename": "patients.csv"
							},
							{
								"foldername": "trendytech-hospital-b",
								"filename": "providers.csv"
							},
							{
								"foldername": "trendytech-hospital-b",
								"filename": "transactions.csv"
							}
						]
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/HosGitRcm_ds')]",
				"[concat(variables('factoryId'), '/datasets/hosSQLRcm_ds')]"
			]
		}
	]
}